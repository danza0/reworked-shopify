{% style %}
  @import url('https://fonts.googleapis.com/css2?family=Cormorant+Garamond:wght@300;400;500;600&family=Montserrat:wght@300;400;500;600&display=swap');

  @keyframes fadeSlideUp-{{ section.id }} {
    from { opacity: 0; transform: translateY(24px); }
    to   { opacity: 1; transform: translateY(0); }
  }
  @keyframes logoFadeIn-{{ section.id }} {
    from { opacity: 0; }
    to   { opacity: {{ section.settings.logo_opacity | divided_by: 100.0 }}; }
  }

  #section-{{ section.id }} {
    position: relative;
    min-height: 100vh;
    background-color: {{ section.settings.bg_color }};
    display: flex;
    flex-direction: column;
    overflow: hidden;
  }

  #section-{{ section.id }} .rf-logo-bg {
    position: fixed;
    top: 50%;
    left: 50%;
    width: {{ section.settings.logo_size }}vw;
    height: auto;
    transform: translate(-50%, -50%);
    opacity: {{ section.settings.logo_opacity | divided_by: 100.0 }};
    pointer-events: none;
    user-select: none;
    animation: logoFadeIn-{{ section.id }} 1.4s ease forwards;
    object-fit: contain;
    z-index: 0;
  }

  #section-{{ section.id }} .rf-nav {
    position: relative;
    z-index: 10;
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 28px 40px;
    color: {{ section.settings.nav_color }};
    font-family: 'Montserrat', sans-serif;
    font-size: 11px;
    font-weight: 500;
    letter-spacing: 0.18em;
    text-transform: uppercase;
  }

  #section-{{ section.id }} .rf-nav-back {
    display: flex;
    align-items: center;
    gap: 8px;
    text-decoration: none;
    color: {{ section.settings.nav_color }};
    transition: opacity 0.2s;
  }
  #section-{{ section.id }} .rf-nav-back:hover { opacity: 0.65; }
  #section-{{ section.id }} .rf-nav-back svg { width: 14px; height: 14px; }

  #section-{{ section.id }} .rf-main {
    position: relative;
    z-index: 10;
    flex: 1;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 40px 24px 64px;
  }

  #section-{{ section.id }} .rf-card {
    width: 100%;
    max-width: {{ section.settings.form_max_width }}px;
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    gap: 6px;
  }

  #section-{{ section.id }} .rf-heading {
    font-family: 'Cormorant Garamond', serif;
    font-size: {{ section.settings.heading_size }}px;
    font-weight: 300;
    letter-spacing: 0.04em;
    color: {{ section.settings.heading_color }};
    margin: 0 0 4px;
    opacity: 0;
    animation: fadeSlideUp-{{ section.id }} 0.8s ease 0.2s forwards;
  }

  #section-{{ section.id }} .rf-subtitle {
    font-family: 'Montserrat', sans-serif;
    font-size: {{ section.settings.subtitle_size }}px;
    font-weight: 300;
    letter-spacing: 0.08em;
    color: {{ section.settings.subtitle_color }};
    margin: 0 0 20px;
    opacity: 0;
    animation: fadeSlideUp-{{ section.id }} 0.8s ease 0.4s forwards;
  }

  #section-{{ section.id }} .rf-form {
    width: 100%;
    display: flex;
    flex-direction: column;
    gap: 14px;
    opacity: 0;
    animation: fadeSlideUp-{{ section.id }} 0.8s ease 0.6s forwards;
  }

  #section-{{ section.id }} .rf-field-label {
    display: block;
    font-family: 'Montserrat', sans-serif;
    font-size: 10px;
    font-weight: 500;
    letter-spacing: 0.16em;
    text-transform: uppercase;
    color: {{ section.settings.field_label_color }};
    margin-bottom: 6px;
    text-align: left;
  }

  #section-{{ section.id }} .rf-phone-row {
    display: flex;
    width: 100%;
  }

  #section-{{ section.id }} .rf-country-select {
    flex: 0 0 auto;
    width: 110px;
    font-family: 'Montserrat', sans-serif;
    font-size: 13px;
    color: {{ section.settings.input_color }};
    background-color: {{ section.settings.input_bg }};
    border: 1px solid {{ section.settings.input_border }};
    border-right: none;
    border-radius: {{ section.settings.input_radius }}px 0 0 {{ section.settings.input_radius }}px;
    padding: 12px 10px;
    cursor: pointer;
    appearance: none;
    -webkit-appearance: none;
    outline: none;
    transition: border-color 0.2s;
  }
  #section-{{ section.id }} .rf-country-select:focus {
    border-color: {{ section.settings.input_focus_border }};
  }

  #section-{{ section.id }} .rf-phone-input {
    flex: 1 1 auto;
    font-family: 'Montserrat', sans-serif;
    font-size: 13px;
    color: {{ section.settings.input_color }};
    background-color: {{ section.settings.input_bg }};
    border: 1px solid {{ section.settings.input_border }};
    border-radius: 0 {{ section.settings.input_radius }}px {{ section.settings.input_radius }}px 0;
    padding: 12px 14px;
    outline: none;
    transition: border-color 0.2s;
    width: 100%;
  }
  #section-{{ section.id }} .rf-phone-input:focus {
    border-color: {{ section.settings.input_focus_border }};
  }
  #section-{{ section.id }} .rf-phone-input::placeholder {
    color: {{ section.settings.hint_color }};
  }

  #section-{{ section.id }} .rf-email-input {
    width: 100%;
    font-family: 'Montserrat', sans-serif;
    font-size: 13px;
    color: {{ section.settings.input_color }};
    background-color: {{ section.settings.input_bg }};
    border: 1px solid {{ section.settings.input_border }};
    border-radius: {{ section.settings.input_radius }}px;
    padding: 12px 14px;
    outline: none;
    box-sizing: border-box;
    transition: border-color 0.2s;
  }
  #section-{{ section.id }} .rf-email-input:focus {
    border-color: {{ section.settings.input_focus_border }};
  }
  #section-{{ section.id }} .rf-email-input::placeholder {
    color: {{ section.settings.hint_color }};
  }

  #section-{{ section.id }} .rf-optional-hint {
    font-family: 'Montserrat', sans-serif;
    font-size: 9px;
    letter-spacing: 0.1em;
    color: {{ section.settings.hint_color }};
    margin-left: 4px;
  }

  #section-{{ section.id }} .rf-submit-btn {
    width: 100%;
    font-family: 'Montserrat', sans-serif;
    font-size: {{ section.settings.btn_font_size }}px;
    font-weight: 500;
    letter-spacing: 0.18em;
    text-transform: uppercase;
    padding: {{ section.settings.btn_padding }}px;
    border-radius: {{ section.settings.btn_radius }}px;
    border: none;
    background-color: {{ section.settings.btn_bg }};
    color: {{ section.settings.btn_text_color }};
    cursor: pointer;
    transition: background-color 0.3s ease, transform 0.3s ease, box-shadow 0.3s ease;
    margin-top: 4px;
  }
  #section-{{ section.id }} .rf-submit-btn:hover:not(:disabled) {
    background-color: {{ section.settings.btn_hover_bg }};
    color: {{ section.settings.btn_hover_text }};
    transform: translateY(-2px);
    box-shadow: 0 8px 24px rgba(0,0,0,0.18);
  }
  #section-{{ section.id }} .rf-submit-btn:disabled {
    opacity: 0.6;
    cursor: not-allowed;
  }

  #section-{{ section.id }} .rf-consent {
    font-family: 'Montserrat', sans-serif;
    font-size: 9px;
    letter-spacing: 0.08em;
    color: {{ section.settings.hint_color }};
    margin-top: 4px;
  }

  /* Success state */
  #section-{{ section.id }} .rf-success {
    display: none;
    flex-direction: column;
    align-items: center;
    gap: 16px;
    opacity: 0;
    animation: fadeSlideUp-{{ section.id }} 0.8s ease forwards;
  }
  #section-{{ section.id }} .rf-success.is-visible {
    display: flex;
  }
  #section-{{ section.id }} .rf-success-icon {
    width: 56px;
    height: 56px;
    border-radius: 50%;
    border: 1.5px solid {{ section.settings.heading_color }};
    display: flex;
    align-items: center;
    justify-content: center;
  }
  #section-{{ section.id }} .rf-success-icon svg {
    width: 24px;
    height: 24px;
    stroke: {{ section.settings.heading_color }};
  }
  #section-{{ section.id }} .rf-success-heading {
    font-family: 'Cormorant Garamond', serif;
    font-size: {{ section.settings.heading_size }}px;
    font-weight: 300;
    letter-spacing: 0.04em;
    color: {{ section.settings.heading_color }};
    margin: 0;
  }
  #section-{{ section.id }} .rf-success-msg {
    font-family: 'Montserrat', sans-serif;
    font-size: 12px;
    font-weight: 300;
    letter-spacing: 0.08em;
    color: {{ section.settings.body_color }};
    margin: 0;
  }
  #section-{{ section.id }} .rf-success-back {
    display: inline-block;
    margin-top: 8px;
    font-family: 'Montserrat', sans-serif;
    font-size: {{ section.settings.btn_font_size }}px;
    font-weight: 500;
    letter-spacing: 0.18em;
    text-transform: uppercase;
    text-decoration: none;
    padding: {{ section.settings.btn_padding }}px 40px;
    border-radius: {{ section.settings.btn_radius }}px;
    border: 1px solid {{ section.settings.btn_bg }};
    background-color: {{ section.settings.btn_bg }};
    color: {{ section.settings.btn_text_color }};
    transition: background-color 0.3s ease, color 0.3s ease, transform 0.3s ease, box-shadow 0.3s ease;
  }
  #section-{{ section.id }} .rf-success-back:hover {
    background-color: {{ section.settings.btn_hover_bg }};
    color: {{ section.settings.btn_hover_text }};
    transform: translateY(-2px);
    box-shadow: 0 8px 24px rgba(0,0,0,0.18);
  }

  @media (max-width: 600px) {
    #section-{{ section.id }} .rf-nav {
      padding: 20px 20px;
    }
    #section-{{ section.id }} .rf-heading {
      font-size: {{ section.settings.heading_size | times: 0.72 | round }}px;
