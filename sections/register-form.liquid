<script>
  (function(){
    var sid = '{{ section.id }}';
    var form = document.getElementById('rfForm-' + sid);
    var phone = document.getElementById('rfPhone-' + sid);
    var code  = document.getElementById('rfCode-' + sid);
    var btn   = document.getElementById('rfSubmit-' + sid);
    var sec   = document.getElementById('rfFormSection-' + sid);
    var succ  = document.getElementById('rfSuccess-' + sid);

    phone.addEventListener('input', function(){ this.value = this.value.replace(/[^0-9]/g,''); });

    form.addEventListener('submit', function(e){
      e.preventDefault();
      if (phone.value.trim().length < 5) {
        phone.style.borderColor = '#cc0000';
        phone.focus();
        return;
      }
      phone.value = code.value + phone.value.trim();
      btn.disabled = true;
      btn.textContent = '{{ section.settings.submitting_text }}';

      var fd = new FormData(form);
      fetch(form.action, { method:'POST', body: fd, headers:{'Accept':'application/json'} })
        .then(function(){ sec.style.display='none'; succ.classList.add('visible'); })
        .catch(function(){ sec.style.display='none'; succ.classList.add('visible'); });
    });
  })();
</script>

