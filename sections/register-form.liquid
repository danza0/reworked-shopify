<script>
(function() {
  var sid = {{ section.id | json }};
  var form     = document.getElementById('rf-form-' + sid);
  var formWrap = document.getElementById('rf-form-wrap-' + sid);
  var submitBtn = document.getElementById('rf-submit-' + sid);
  var successEl = document.getElementById('rf-success-' + sid);
  var phoneInput = document.getElementById('rf-phone-' + sid);
  var countrySelect = document.getElementById('rf-country-' + sid);
  var submittingText = {{ section.settings.btn_submitting_text | json }};

  if (!form) return;

  // Digits-only enforcement on phone input
  phoneInput.addEventListener('input', function() {
    this.value = this.value.replace(/[^\d]/g, '');
  });

  form.addEventListener('submit', function(e) {
    e.preventDefault();

    var digits = phoneInput.value.trim();
    if (!digits) {
      phoneInput.focus();
      return;
    }

    // Prepend country code
    var code = countrySelect ? countrySelect.value : '';
    var fullPhone = code + digits;

    submitBtn.disabled = true;
    submitBtn.textContent = submittingText;

    var formData = new FormData(form);
    formData.set('contact[phone]', fullPhone);

    fetch('/contact', {
      method: 'POST',
      headers: { 'Accept': 'application/json' },
      body: formData
    })
    .then(function(res) {
      if (res.ok || res.status === 200 || res.redirected) {
        formWrap.style.display = 'none';
        successEl.classList.add('is-visible');
      } else {
        submitBtn.disabled = false;
        submitBtn.textContent = {{ section.settings.btn_submit_text | json }};
      }
    })
    .catch(function() {
      // Network error â€” re-enable the button so the user can retry
      submitBtn.disabled = false;
      submitBtn.textContent = {{ section.settings.btn_submit_text | json }};
    });
  });
})();
</script>

