{% style %}
  @import url('https://fonts.googleapis.com/css2?family=Cormorant+Garamond:ital,wght@0,300;0,400;0,500;0,600;1,300;1,400&family=Montserrat:wght@300;400;500;600&display=swap');

  #section-{{ section.id }} {
    --heading-color: {{ section.settings.heading_color }};
    --text-color: {{ section.settings.text_color }};
    --bg-color: {{ section.settings.background_color }};
    --btn-bg: {{ section.settings.button_bg_color }};
    --btn-text: {{ section.settings.button_text_color }};
    --btn-border: {{ section.settings.button_border_color }};
    --btn-hover-bg: {{ section.settings.button_hover_bg }};
    --btn-hover-text: {{ section.settings.button_hover_text }};
    --label-color: {{ section.settings.label_color }};
    --subtitle-color: {{ section.settings.subtitle_color }};
    --logo-opacity: {{ section.settings.logo_opacity | divided_by: 100.0 }};
    --logo-size: {{ section.settings.logo_size }}vw;
    --nav-color: {{ section.settings.nav_text_color }};
  }

  #section-{{ section.id }} * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  #section-{{ section.id }} .ds-hero {
    position: relative;
    width: 100%;
    height: 100vh;
    background: var(--bg-color);
    display: flex;
    align-items: flex-end;
    justify-content: center;
    overflow: hidden;
  }

  #section-{{ section.id }} .ds-logo-bg {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%) scale(1.05);
    width: var(--logo-size);
    max-width: 750px;
    height: auto;
    opacity: 0;
    filter: brightness(0) opacity(var(--logo-opacity));
    animation: dsBgZoom-{{ section.id }} 2s cubic-bezier(0.25,0.46,0.45,0.94) 0.2s forwards;
    pointer-events: none;
    user-select: none;
  }

  @keyframes dsBgZoom-{{ section.id }} {
    0%   { opacity: 0; transform: translate(-50%,-50%) scale(1.15); }
    100% { opacity: 1; transform: translate(-50%,-50%) scale(1); }
  }

  #section-{{ section.id }} .ds-hero::after {
    content: '';
    position: absolute;
    inset: 0;
    background: radial-gradient(ellipse at center, transparent 40%, var(--bg-color) 100%);
    opacity: 0.7;
    pointer-events: none;
    z-index: 1;
  }

  #section-{{ section.id }} .ds-content {
    position: relative;
    z-index: 2;
    text-align: center;
    padding-bottom: clamp(6rem, 12vh, 10rem);
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  #section-{{ section.id }} .ds-label {
    font-family: 'Montserrat', sans-serif;
    font-weight: 500;
    font-size: {{ section.settings.label_size }}px;
    letter-spacing: 0.4em;
    text-transform: uppercase;
    color: var(--label-color);
    margin-bottom: 1.2rem;
    opacity: 0;
    animation: dsFadeUp-{{ section.id }} 0.8s ease-out 0.8s forwards;
  }

  #section-{{ section.id }} .ds-title {
    font-family: 'Cormorant Garamond', serif;
    font-weight: 500;
    font-size: clamp({{ section.settings.heading_size_mobile }}px, 9vw, {{ section.settings.heading_size }}px);
    letter-spacing: 0.02em;
    line-height: 1;
    color: var(--heading-color);
    margin-bottom: 1.8rem;
    opacity: 0;
    animation: dsFadeUp-{{ section.id }} 1s ease-out 1.1s forwards;
  }

  #section-{{ section.id }} .ds-subtitle {
    font-family: 'Montserrat', sans-serif;
    font-weight: 300;
    font-size: clamp(11px, 1.5vw, {{ section.settings.subtitle_size }}px);
    letter-spacing: 0.18em;
    color: var(--subtitle-color);
    margin-bottom: 2.8rem;
    opacity: 0;
    animation: dsFadeUp-{{ section.id }} 0.8s ease-out 1.4s forwards;
  }

  #section-{{ section.id }} .ds-btn {
    display: inline-block;
    padding: {{ section.settings.button_padding_y }}px {{ section.settings.button_padding_x }}px;
    border: 1.5px solid var(--btn-border);
    border-radius: {{ section.settings.button_radius }}px;
    background: var(--btn-bg);
    color: var(--btn-text);
    font-family: 'Montserrat', sans-serif;
    font-weight: 500;
    font-size: {{ section.settings.button_font_size }}px;
    letter-spacing: 0.22em;
    text-transform: uppercase;
    text-decoration: none;
    cursor: pointer;
    transition: all 0.45s cubic-bezier(0.25,0.46,0.45,0.94);
    opacity: 0;
    animation: dsFadeUp-{{ section.id }} 0.8s ease-out 1.7s forwards;
    {% if section.settings.button_glass %}
      backdrop-filter: blur(12px);
      -webkit-backdrop-filter: blur(12px);
    {% endif %}
  }

  #section-{{ section.id }} .ds-btn:hover {
    background: var(--btn-hover-bg);
    color: var(--btn-hover-text);
    border-color: var(--btn-hover-bg);
    transform: translateY(-2px);
    box-shadow: 0 8px 30px rgba(0,0,0,0.12);
  }

  @keyframes dsFadeUp-{{ section.id }} {
    0%   { opacity: 0; transform: translateY(25px); }
    100% { opacity: 1; transform: translateY(0); }
  }

  #section-{{ section.id }} .ds-scroll {
    position: absolute;
    bottom: 2rem;
    left: 50%;
    transform: translateX(-50%);
    z-index: 2;
    display: flex;
    flex-direction: column;
    align-items: center;
    opacity: 0;
    animation: dsFadeIn-{{ section.id }} 0.6s ease-out 2.4s forwards;
  }

  #section-{{ section.id }} .ds-scroll-line {
    width: 1px;
    height: 28px;
    background: linear-gradient(to bottom, var(--subtitle-color), transparent);
    animation: dsScrollPulse-{{ section.id }} 2s ease-in-out infinite 2.6s;
  }

  @keyframes dsScrollPulse-{{ section.id }} {
    0%,100% { opacity: 1; transform: scaleY(1); }
    50%     { opacity: 0.3; transform: scaleY(0.6); }
  }

  @keyframes dsFadeIn-{{ section.id }} {
    to { opacity: 1; }
  }

  #section-{{ section.id }} .ds-topbar {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    z-index: 10;
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 1.6rem 2.5rem;
    opacity: 0;
    animation: dsFadeIn-{{ section.id }} 0.6s ease-out 2s forwards;
  }

  #section-{{ section.id }} .ds-brand {
    font-family: 'Cormorant Garamond', serif;
    font-weight: 600;
    font-size: 1.1rem;
    letter-spacing: 0.12em;
    text-transform: uppercase;
    color: var(--nav-color);
    text-decoration: none;
  }

  #section-{{ section.id }} .ds-topright {
    font-family: 'Montserrat', sans-serif;
    font-weight: 400;
    font-size: 0.68rem;
    letter-spacing: 0.2em;
    text-transform: uppercase;
    color: var(--subtitle-color);
  }

  @media (max-width: 600px) {
    #section-{{ section.id }} .ds-topbar {
      padding: 1.2rem 1.5rem;
    }
    #section-{{ section.id }} .ds-content {
      padding-bottom: 8rem;
    }
    #section-{{ section.id }} .ds-btn {
      padding: 13px 36px;
    }
  }
{% endstyle %}

<div id="section-{{ section.id }}">
  <section class="ds-hero">

    {%- if section.settings.logo != blank -%}
      <img
        src="{{ section.settings.logo | image_url: width: 1200 }}"
        alt=""
        class="ds-logo-bg"
        aria-hidden="true"
        loading="eager"
      />
    {%- endif -%}

    <div class="ds-topbar">
      <a href="/" class="ds-brand">{{ section.settings.brand_name }}</a>
      <span class="ds-topright">{{ section.settings.top_right_text }}</span>
    </div>

    <div class="ds-content">
      {%- if section.settings.label_text != blank -%}
        <p class="ds-label">{{ section.settings.label_text }}</p>
      {%- endif -%}

      <h1 class="ds-title">{{ section.settings.heading_text }}</h1>

      {%- if section.settings.subtitle_text != blank -%}
        <p class="ds-subtitle">{{ section.settings.subtitle_text }}</p>
      {%- endif -%}

      {%- if section.settings.button_text != blank -%}
        <a href="{{ section.settings.button_link }}" class="ds-btn">
          {{ section.settings.button_text }}
        </a>
      {%- endif -%}
    </div>

    {%- if section.settings.show_scroll_indicator -%}
      <div class="ds-scroll">
        <div class="ds-scroll-line"></div>
      </div>
    {%- endif -%}

  </section>
</div>

